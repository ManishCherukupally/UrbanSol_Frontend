        <div class="motor-grid">
            <h2 class="motoName">Main motor</h2>
            <button onclick="ForwardsendMessage()" class="statusbtn" id="forward_btn"
                style="width: 30%;height: auto; background-color: #d10000; border-radius: 10%; display: flex; justify-content: center;align-items: center;">
                <p id="mmf_status" style="font-size: x-large; font-weight: 600; color: aliceblue; ">
                    Forward</p>
            </button>
            <button onclick="ReversesendMessage()" class="statusbtn" id="reverse_btn"
                style="width: 30%;height: auto; background-color: #d10000; border-radius: 10%; display: flex; justify-content: center;align-items: center;">
                <p style="font-size: x-large; font-weight: 600; color: aliceblue; ">
                    Reverse</p>
            </button>
        </div>

        <div class="twocolomn-grid">
            <h2 class="motoName">Blower</h2>
            <button onclick="BlowersendMessage()" class="statusbtn" id="blower_btn"
                style=" width: 30%;height: auto; background-color: #d10000; border-radius: 10%; display: flex; justify-content: center;align-items: center;">
                <p id="blowerstatus" style="font-size: large; font-weight: 600; color: aliceblue; ">
